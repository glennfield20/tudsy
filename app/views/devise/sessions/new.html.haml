.container
  .row
    .col-md-6.col-md-offset-3
      .card#login
        %h2.h2
          TUDSY
          %small welcome back!
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-group
            = f.label :email, "Your email"
            = f.email_field :email, autofocus: true, class: "form-control", placeholder: "john@example.com"
          .form-group
            = f.label :password, "Your password"
            = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "●●●●●●"
          - if devise_mapping.rememberable?
            .form-group.clearfix
              %label.checkbox-inline.pull-left.remember-me
                = f.check_box :remember_me
                = f.label :remember_me
              = f.submit "Log In", class: "btn btn-primary pull-right"
          %footer.card-footer
            %p
              Don't have an account?
              - if devise_mapping.registerable? && controller_name != 'registrations'
                = link_to "Sign up", new_registration_path(resource_name)
      %p.forgot-password.text-center
        - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
          = link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-link'

